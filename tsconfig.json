{
	"include": ["./src/**/*.ts", "./src/**/*.vue"],
	"exclude": ["node_modules", "vendor"],
	"compilerOptions": {
		"outDir": "./js",
		"allowJs": true,
		"checkJs": true,
		"allowImportingTsExtensions": true,
		"lib": ["ESNext"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"verbatimModuleSyntax": true,
		"target": "ES2020",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
	},
	"vueCompilerOptions": {
		"target": 2.7,
	}
}
